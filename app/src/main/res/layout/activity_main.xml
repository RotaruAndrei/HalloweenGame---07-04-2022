<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_volumeIconId"
        android:src="@drawable/ic_volume_on"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/main_linearLayoutId">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/main_heroImg"
                android:src="@drawable/hero"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_heroTitle"
                android:text="Hero"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/main_enemy1Img"
                android:src="@drawable/enemy_1"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_enemy1Title"
                android:text="Enemy 1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/main_enemy2Img"
                android:src="@drawable/enemy_2"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_enemy2Title"
                android:text="Enemy 2"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/main_enemy3Img"
                android:src="@drawable/enemy_3"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_enemy3Title"
                android:text="Enemy 3"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/main_rewardImg"
                android:src="@drawable/pumpkin"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_rewardTitle"
                android:text="Reward"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                />



        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_instructions"
        android:text="Hello and Welcome, in order to finish the game \n
you have to collect 400 rewards"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@id/main_linearLayoutId"
        android:layout_marginTop="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_play_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_design"
        app:strokeColor="@color/white"
        android:text="Play"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAllCaps="false"
        />


</RelativeLayout>